.xscroll_bar {
    overflow-y: hidden;
    height: 88rpx;
    line-height: 88rpx;
    white-space: nowrap;
    display: flex;
    background: #fff;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    box-shadow: 2rpx 4rpx 10rpx rgba(48, 48, 48, 0.3);
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.menu_item {
