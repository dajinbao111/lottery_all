/* 标题 */

.expand {
    display: biock;
}

.item-title {
    background-color: #fff;
    border-top: 1px solid #e9e9e9;
    border-bottom: 1px solid #efefef;
    padding: 0 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    position: relative
}

.item-title::before {
    content: "";
    width: 6rpx;
    height: 40rpx;
    background-color: #ff0000;
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translate(0, -50%)
}

.item-title::after,
.planTile::after {
    content: "";
    width: 12rpx;
    height: 12rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    border-top: 1px solid #999;
    border-right: 1px solid #999;
}

.item-title::after {
    transform: translate(0, -50%) rotate(-45deg);
    transition: all 0.2s
}

.planTile::after {
    transform: translate(0, -50%) rotate(135deg);
    transition: all 0.2s
}

.item-title .text {
    font-size: 30rpx;
    color: #262626;
    font-weight: bold;
    width: 200rpx;
    margin-left: 30rpx
}

.item-title .dueTime {
    color: #ff0000;
    font-size: 28rpx;
    margin-right: 60rpx;
}


