/*头部




/*目前暂时不支持伪类，边距的去除只能动态判断*/

Page {
    background: #fff;
    height: 100%
}

.xscroll_bar {
    overflow-y: hidden;
    height: 80rpx;
    line-height: 72rpx;
    white-space: nowrap;
    display: flex;
    background: #fff;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    justify-content: space-between;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.menu_item {
    text-align: center;
    font-size: 30rpx;
    color: #7c7c7c;
    display: inline-block;
    width: 134rpx
}


/*目前暂时不支持伪类，边距的去除只能动态判断*/

.xscroll_bar .active {
    color: #2d80ff !important;
    background: #fff !important;
}

.xscroll_bar .active view {
    color: #2d80ff !important;
    border-bottom: 4rpx solid #2d80ff
}

.menu_content {
    padding: 30rpx;
}

.menu_panel {
    margin: 20rpx 20rpx 20rpx 0;
    border-left: 10rpx solid #ccc;
    font-size: 26rpx;
}

.menu_panel>view {
    padding: 30rpx;
    background: #ececec;
    border-radius: 0 20rpx 20rpx 0;
}


/*截止日期*/

.deadline {
    height: 54rpx;
    overflow-y: hidden;
    line-height: 54rpx;
    white-space: nowrap;
    background: #e2f8ff;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 80rpx;
    width: 100%;
    font-size: 26rpx;
    padding: 0 20rpx;
    color: #6b99f7
}

.deadline span {
    color: #094395 !important
}

.deadline-view {
    padding-right: 74rpx
}