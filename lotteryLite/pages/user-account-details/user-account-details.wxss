page {
    background-color: #fff
}

.item_wrap {
    padding: 0 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1px solid #f2f2f2;
    font-size: 28rpx;
    font-family: "微软雅黑";
    color: #141414;
    display: flex;
    justify-content: space-around
}

.item_wrap .incomeMoney {
    width: 200rpx;
    color: #ff0000;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item_wrap .expenditureMoney {
    width: 200rpx;
    color: #098417;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item_wrap .useType {
    width: 328rpx;
}

.item_wrap .useDate {
    width: 280rpx;
    text-align: right
}

.hint_text {
    text-align: center;
    font-size: 28rpx;
    color: #b7b6b6;
    line-height: 80rpx;
}


/* 暂无数据 */

.noData {
    position: absolute;
    top: 50%;
    left: 0;
    line-height: 40rpx;
    font-size: 28rpx;
    text-align: center;
    transform: translate(0, -50%);
    width: 100%
}

.noDataImg {
    width: 120rpx;
    height: 120rpx;
    opacity: .5
}

.noData__tips {
    font-size: 32rpx;
    color: #adacac
}