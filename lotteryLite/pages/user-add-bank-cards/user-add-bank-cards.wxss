.container {
    font-family: "微软雅黑";
    font-size: 28rpx;
}

.bank_cards_information {
    border-bottom: 1px solid #e2e1e1;
    padding-left: 24rpx;
    background: #fff
}

.bank_cards_information .bank,
.bank_cards_information .user,
.bank_cards_information .cards {
    height: 120rpx;
    line-height: 120rpx;
    font-size: 30rpx;
    color: #202020;
    font-family: "微软雅黑";
    position: relative;
}

.bank_cards_information .user,
.bank_cards_information .bank {
    border-bottom: 1px solid #f3f3f3;
}

.bank_cards_information .bank_name,
.bank_cards_information .user_name,
.bank_cards_information .card_number {
    width: 530rpx;
    height: 120rpx;
    line-height: 120rpx;
    position: absolute;
    right: 24rpx;
    top: 0;
    color: #000;
    font-family: '微软雅黑'
}

.btn_box {
    margin-top: 60rpx;
}

.btn_box .sure_btn {
    background: #eb6001;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-family: "微软雅黑";
    font-size: 30rpx;
    border-radius: 0
}

.notition {
    margin-top: 40rpx;
    padding: 0 30rpx;
    font-family: "微软雅黑";
    font-size: 24rpx;
    color: #c7c7c6;
}

.placeholderStyle {
    color: #aaa;
    font-family: '微软雅黑'
}